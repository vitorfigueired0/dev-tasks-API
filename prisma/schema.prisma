generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique @default("")
  firstName String @default("")
  lastName  String @default("")
}

model Tasks {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String   @default("")
  description String   @default("")
  createdAt   DateTime
  status      Status
}

enum Status {
  WAITING
  IN_PROGRESS
  FINISHED
}

